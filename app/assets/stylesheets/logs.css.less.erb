/*overrides bootstrap variable issue that makes search bar text disappear (go white) on unfocus*/
.navbar-inverse .navbar-search .search-query {
	color: #333;
}

.wrapper {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	margin: 0 auto -4em;
}

.nav li, .results, .instructions, .chat-link label, .line-number, .more, .image-controls, .search-results-title,.loading-more, .report-chat{
	font-family: 'Proxima Nova', sans-serif;
	text-transform: uppercase;
}

.nav li {
	-webkit-font-smoothing: antialiased;
	font-weight: bold;
}

