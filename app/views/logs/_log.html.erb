<li class="results-item">
	<div class="row">
		<div class="span6 offset1 img-polaroid">
			<%= image_tag log.url, :width => "500", :class => "chat-file" %>
		</div>
		<div class="span3 control-container">
			<div class="span3 controls">
				<div class="voting">
					<%= render :partial => "vote",
					      :locals => {:log => log, :type => "up"} %>
					<%= render :partial => "vote",
					      :locals => {:log => log, :type => "down"} %>
				</div>
				<div class="chat-link">
					<label>Link to this chat</label>
					<input type="text" value="<%= log.public_url %>" readonly="readonly">
				</div>
				<div class="report-chat">
					<%= show_flag log %>
					Report Chat
				</div>
			</div>
		</div>
	</div>
</li>
<hr class="item-divider autoload-item">
