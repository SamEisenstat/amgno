<div class="image-container">
	<div class="image-controls">
		<%= render :partial => "vote",
			:locals => {:log => log, :type => "up", :extra_class => "search-vote"} %>
		<%= render :partial => "vote",
			:locals => {:log => log, :type => "down", :extra_class => "search-vote"} %>
		<div class="other-controls">
			<a class="top-of-chat">Top of chat</a>
			<span class="bullet">&#8226;</span>
			<a class="direct-link" data-content="<input type='text' value='<%= log_path(log) %>'>" data-placement="bottom">Direct Link</a> 
			<span class="bullet">&#8226;</span>
			<%= show_flag log %>
		</div>
	</div>
	<div class="span6 img-polaroid search-result-scroll results-container">
		<div class="image-padding">
			<img src="<%= log.url %>" width="500px" alt=""/>
		</div>
	</div>
</div>
